    <query name="getSelectedProgramScheme">

        select a
        from ProgramScheme a
        where a.id.instituteid  = :instituteid
        and a.programid in (:programid)
        and a.sectionid in (:sectionid)
        and a.stynumber in (:stynumber)
        and coalesce(a.deactive,'N') = 'N'
        order by a.programid, a.sectionid, a.stynumber

 
    </query>
    <query name="getSelectedProgramSchemeAcadyearWise">

        select a.id.instituteid,a.id.programschemeacadwiseid,a.academicyear,a.stynumber,a.deactive,a.credits,a.totalmarks,a.passingmarks,a.electiveid,
        a.regfeeamount,pm.programcode,sec.sectioncode,bm.basketcode,sub.subjectcode,dm.department,subty.subjecttype,subty.id.subjecttypeid,subty.subjecttypedesc,a.subjectid,sub.subjectdesc
        from ProgramSchemeAcadyearWise a,ProgramMaster pm,SectionMaster sec,BasketMaster bm,SubjectMaster sub,DepartmentMaster dm,SubjectTypeMaster subty
        where  a.id.instituteid=pm.id.instituteid and a.programid=pm.id.programid and a.id.instituteid=sec.id.instituteid and a.sectionid=sec.id.sectionid
        and a.id.instituteid=bm.id.instituteid and a.basketid=bm.id.basketid and a.id.instituteid=sub.id.instituteid and a.subjectid=sub.id.subjectid
        and a.departmentid=dm.departmentid and bm.subjecttypeid=subty.id.subjecttypeid
        and a.id.instituteid  = :instituteid
        and a.programid in (:programid)
        and a.academicyear in (:academicyear)
        and a.sectionid in (:sectionid)
        and a.stynumber in (:stynumber)
        <!--and coalesce(a.deactive,'N') = 'N'-->
        order by a.programid, a.sectionid, a.stynumber
    </query>
