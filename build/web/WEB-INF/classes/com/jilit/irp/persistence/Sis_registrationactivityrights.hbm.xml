<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.jilit.irp.persistence.dto.Sis_RegistrationActivityRights" table="SIS_REGISTRATIONACTIVITYRIGHTS">
        <comment>Activities cum user Wise Rights for work flow of Registration process</comment>
        <composite-id class="com.jilit.irp.persistence.dto.Sis_RegistrationActivityRightsId" name="id">
            <key-property name="instituteid" type="string">
                <column length="20" name="INSTITUTEID"/>
            </key-property>
            <key-property name="activityid" type="string">
                <column length="20" name="ACTIVITYID"/>
            </key-property>
            <key-property name="staffid" type="string">
                <column length="20" name="STAFFID"/>
            </key-property>
            <key-property name="stafftype" type="string">
                <column length="1" name="STAFFTYPE"/>
            </key-property>
        </composite-id>
        <many-to-one class="com.jilit.irp.persistence.dto.Sis_RegistrationActivityMaster" fetch="select" insert="false" lazy="false" name="sis_registrationactivitymaster" update="false">
            <column length="20" name="INSTITUTEID" not-null="true"/>
            <column length="20" name="ACTIVITYID" not-null="true"/>
        </many-to-one>
        <property name="fromdate" type="date">
            <column length="7" name="FROMDATE" not-null="true"/>
        </property>
        <property name="tilldate" type="date">
            <column length="7" name="TILLDATE"/>
        </property>
        <property name="deactive" type="string">
            <column length="1" name="DEACTIVE"/>
        </property>
    </class>
</hibernate-mapping>
