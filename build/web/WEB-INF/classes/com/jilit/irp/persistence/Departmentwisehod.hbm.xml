  <query name="findAllHODDepartmentWise">
         select distinct master,view
         from DepartmentWiseHod master , V_Staff view
         where
         master.id.instituteid=?
         and trunc(sysdate)&gt;=trunc(master.id.formdate)
         and trunc(sysdate)&lt;=coalesce(master.tilldate, trunc(sysdate))
         and coalesce(master.deactive,'N')='N'
