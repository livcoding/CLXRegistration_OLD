    <query name="findShortStudentAttendance_PresentAttendance">

        select count(*) from StudentAttendance a, FacultyStudentTagging b
        where a.id.instituteid=b.id.instituteid and a.id.studentid=b.id.studentid
        and a.id.studentfstid=b.id.studentfstid
        and a.id.instituteid = ?
